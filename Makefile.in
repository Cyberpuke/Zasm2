SUBDIRS = doc lib src

all:
	for dir in ${SUBDIRS}; do \
	 (cd $$dir; ${MAKE} all); \
	done

clean:
	for dir in ${SUBDIRS}; do \
	 (cd $$dir; ${MAKE} clean); \
	done

distclean:
	for dir in ${SUBDIRS}; do \
	 (cd $$dir; ${MAKE} distclean); \
	done
	rm -f config.h;
	rm -f Makefile;
	rm -f config.log
